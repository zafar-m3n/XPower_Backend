<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 40px;
        font-size: 14px;
      }
      h1 {
        text-align: center;
        font-size: 22px;
        margin-bottom: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      th,
      td {
        border: 1px solid #ccc;
        padding: 6px 10px;
        text-align: left;
      }
      th {
        background-color: #f0f0f0;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <table>
      <thead>
        <tr>
          <% columns.forEach(col => { %>
          <th><%= col.label %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(row => { %>
        <tr>
          <% columns.forEach(col => { %>
          <td><%= row[col.key] %></td>
          <% }) %>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
